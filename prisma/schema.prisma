generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id String @id @default(cuid())
  name String?
  email String? @unique
  password String?
  provider String?
  songs Song[] 
  upvotes upvotes[]
}
model upvotes{
  id String @id @default(cuid())
  userId String
  user User @relation(fields: [userId],references: [id])
  songId String
  song Song @relation(fields: [songId],references: [id])
}


model Song{
  id String @id @default(cuid())
  videoId String?
  description String?
  name String?
  thumbnail String?
  upvotes upvotes[]
  Playing Boolean? @default(false)
  link String?
  userId String
  user User @relation(fields: [userId],references: [id])
}

